@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Welcome to Quill Lite</h1>
            <p>Where Tradition Meets Elegance</p>
            <a href="@Url.Action("About", "Home")" class="btn btn-primary">Learn More</a>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="categories">
        <div class="row">
            <div class="col-md-4">
                <a href="#" class="category-item">
                    <img src="https://via.placeholder.com/300x400" alt="Category 1">
                    <h3>Women</h3>
                </a>
            </div>
            <div class="col-md-4">
                <a href="#" class="category-item">
                    <img src="https://via.placeholder.com/300x400" alt="Category 2">
                    <h3>Men</h3>
                </a>
            </div>
            <div class="col-md-4">
                <a href="#" class="category-item">
                    <img src="https://via.placeholder.com/300x400" alt="Category 3">
                    <h3>Kids</h3>
                </a>
            </div>
        </div>
    </section>

    <!-- Trending Products Carousel -->
    <section class="trending-products">
        <h2>Trending Now</h2>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://via.placeholder.com/800x400" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://via.placeholder.com/800x400" alt="Second slide">
                </div>
                <!-- Add more carousel items as needed -->
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>
</div>

<style>
    /* Hero Section */
    .hero {
        background: url('https://via.placeholder.com/1600x600') no-repeat center center/cover;
        color: #fff;
        text-align: center;
        padding: 100px 20px;
    }

        .hero h1 {
            font-size: 3em;
            margin-bottom: 20px;
        }

        .hero p {
            font-size: 1.5em;
            margin-bottom: 20px;
        }

        .hero .btn {
            padding: 12px 24px;
            font-size: 1.1em;
        }

    /* Categories Section */
    .categories {
        padding: 40px 20px;
        text-align: center;
    }

    .category-item {
        display: block;
        text-decoration: none;
        color: #333;
    }

        .category-item img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .category-item h3 {
            font-size: 1.5em;
        }

    /* Trending Products Carousel */
    .trending-products {
        padding: 40px 20px;
        text-align: center;
    }

        .trending-products h2 {
            font-size: 2.5em;
            margin-bottom: 30px;
        }

    .carousel-item img {
        border-radius: 8px;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Activate carousel
            $('#carouselExampleIndicators').carousel();
        });
    </script>
}
