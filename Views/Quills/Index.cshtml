@model IEnumerable<Quill_Lite_App.Models.Quill>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center my-4">Quill List</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center mb-4">
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Brand)</th>
                                <th>@Html.DisplayNameFor(model => model.Material)</th>
                                <th>@Html.DisplayNameFor(model => model.Ratings)</th>
                                <th>@Html.DisplayNameFor(model => model.SizeFit)</th>
                                <th>@Html.DisplayNameFor(model => model.Color)</th>
                                <th>@Html.DisplayNameFor(model => model.Design)</th>
                                <th>@Html.DisplayNameFor(model => model.Price)</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Material)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Ratings)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SizeFit)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Color)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Design)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImagePath))
                                        {
                                            <img src="@Url.Content("~/" + item.ImagePath)" alt="Product Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm mx-1">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mx-1">Details</a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-danger btn-sm mx-1">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
