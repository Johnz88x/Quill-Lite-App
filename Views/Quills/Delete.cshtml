@model Quill_Lite_App.Models.Quill

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete Quill</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Are you sure you want to delete this?</h4>
                </div>
                <div class="card-body">
                    <h4 class="text-center">Quill Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 text-right font-weight-bold">
                            @Html.DisplayNameFor(model => model.Brand)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Brand)
                        </dd>
                        <dt class="col-sm-4 text-right font-weight-bold">
                            @Html.DisplayNameFor(model => model.Material)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Material)
                        </dd>
                        <dt class="col-sm-4 text-right font-weight-bold">
                            @Html.DisplayNameFor(model => model.Ratings)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Ratings)
                        </dd>
                        <dt class="col-sm-4 text-right font-weight-bold">
                            @Html.DisplayNameFor(model => model.SizeFit)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.SizeFit)
                        </dd>
                        <dt class="col-sm-4 text-right font-weight-bold">
                            @Html.DisplayNameFor(model => model.Color)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Color)
                        </dd>
                        <dt class="col-sm-4 text-right font-weight-bold">
                            @Html.DisplayNameFor(model => model.Design)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Design)
                        </dd>
                        <dt class="col-sm-4 text-right font-weight-bold">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                    </dl>
                    <form asp-action="Delete" class="text-center">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger mx-2" />
                        <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
